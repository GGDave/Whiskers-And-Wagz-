<!-- views/pets.handlebars -->

<!DOCTYPE html>
<html>
  <head>
    <title>Available Pets - Wagz Pet Adoption Agency</title>
  </head>
  <body>
    <h1>Available Pets</h1>
    <ul>
      {{#each pets}}
      <li>
        <h2>{{name}}</h2>
        <p>Type: {{type.type_name}}</p>
        <p>Breed: {{breed.breed_name}}</p>
        <p>Gender: {{gender}}</p>
        <p>Age: {{age}}</p>
        <!-- Add more pet details as needed -->
      </li>
      {{/each}}
    </ul>
  </body>
</html>

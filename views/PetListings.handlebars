<!-- views/petListings.handlebars -->
<body>
    <div class="pet-listings-container">
        {{#each pets}}
        <div class="pet-listing">
            <img src="{{image}}" width="300" height="300">
            <h3 class="pet-listing-title">{{name}}</h3>
            <div class="description">
                {{description}}
            </div>
            <a href="/pet/{{id}}">View Details</a>
        </div>
        {{/each}}
    </div>
</body>

